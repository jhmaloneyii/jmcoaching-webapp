<div class="container">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <%= form_with(model: post, local: true) do |form| %>
      <% if post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
          <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :title %><br>
        <%= form.text_field :title, id: :post_title %>
      </div>

      <div class="field">
        <%= form.label :content %>
        <%= form.text_area :content, id: :post_content, class: "tinymce", size: "100x25" %>
      </div>

      <div class="field">
        <%= form.label :summary %>
        <%= form.text_area :summary, id: :post_summary %>
      </div>

      <div class="field">
        <%= form.label :active %>
        <%= form.check_box :active, id: :post_active %>
      </div>

      <div class="field">
        <% if @post.image? %>
        <%= image_tag @post.image.to_s, class: "img-fluid"%>
        <% end %>
        <%= form.label :image %>
        <%= form.file_field :image, id: :post_image %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<%= tinymce %>
