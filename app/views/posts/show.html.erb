<% provide(:title, @post.title) %>
<section class="content-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-10 mx-auto post-top text-center">
            <%= image_tag @post.image_url.to_s, class: "img-fluid"%><br>
            <h1><%= @post.title %> </h1>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-9 mx-auto">
            <%= sanitize @post.content %>
          </div>
        </div>

        <div class= "row">
          <div class= "col-lg-6 mx-auto">
            <p><%= link_to "Back", posts_path %>
              <% if admin_signed_in? %>
                | <%= link_to "Edit", edit_post_path(@post.id) %> |
                <%= link_to "Delete", @post, method: :delete, data: {confirm: "Are you sure you want to delete?"} %>
              <% end %>
            </p>
          </div>
      </div>
</section>
