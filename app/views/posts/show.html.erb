<% provide(:title, @post.title) %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Title:</strong>
        <%= @post.title %>
      </p>

      <p>
        <strong>Content:</strong>
        <%= @post.content %>
      </p>

      <p>
        <strong>Summary:</strong>
        <%= @post.summary %>
      </p>

      <p>
        <strong>Active:</strong>
        <%= @post.active %>
      </p>

      <p>
        <strong>Image:</strong>
        <%= @post.image %>
      </p>

      <%= link_to 'Edit', edit_post_path(@post) %> |
      <%= link_to 'Back', posts_path %>
    </div>
  </div>
</div>
