<% provide(:title, @post.title) %>
<section class="content-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 mx-auto post-top text-center">
            <%= if @post.image then image_tag @post.image.path_url.to_s, class: "img-fluid" end %><br>
            <h1><%= @post.title %> </h1>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-8 mx-auto">
            <%= sanitize @post.content %>
            <p>Blog Tags: <% @post.tags.each do |tag| %>
              <%= link_to "#{tag.name}", tag %>
            <% end %><br></p>
            <p>Updated: <%= @post.updated_at.strftime("%B %d, %Y") %>
          </div>
        </div>

        <div class= "row">
          <div class= "col-lg-6 mx-auto">
            <p><%= link_to "Back", posts_path %>
              <% if admin_signed_in? %>
                | <%= link_to "Edit", edit_admin_post_path(@post.id) %> |
                <%= link_to "Delete", @post, method: :delete, data: {confirm: "Are you sure you want to delete?"} %>
              <% end %>
            </p>
          </div>
      </div>
</section>
