<% if post.active %>
  <tr>
    <td>
      <div class="row">
        <div class="col-lg-4 mx-auto text-center">
          <%= link_to (image_tag post.image.to_s, class: "img-fluid"), post %>
        </div>
        <div class="col-lg-8 mx-auto">
          <h1><%= link_to post.title, post %></h1>
          <p><%= post.summary %></p>
          <p>Tags: 
            <% post.tags.each do |tag| %>
              <%= link_to "#{tag.name}", tag %>
            <% end %>
        </div>
      </div>
    </td>
  </tr>
<% end %>
