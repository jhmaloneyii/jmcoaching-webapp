<% provide(:title, "Tag: #{@tag.name}") %>

<section class="content-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-10 mx-auto">
            <h1><%= @tag.name %> </h1>
          </div>
        </div>

        <div class= "row">
          <div class= "col-lg-12 mx-auto">
            <%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
            <% @posts.each do |post| %>
              <%= render 'shared/post_preview', post: post %>
            <% end %>
            <%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
          </div>
      </div>
</section>
